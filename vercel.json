{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "app/api/**/*.js", "use": "@vercel/node" },
    { "src": "routes/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/server.js" },
    { "src": "/api/chat", "dest": "/app/api/chat/route.js" },
    { "src": "/api/auth/(.*)", "dest": "/routes/auth.js" },
    { "src": "/api/contact", "dest": "/routes/contact.js" },
    { "src": "/api/koalaroute", "dest": "/routes/koalaroute.js" }
  ]
}
